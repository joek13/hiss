mod(n, k) = if k < n
            then k
            else mod(n, k-n)

mod2 = mod(2)

collatz(n, steps) = if n == 1
                    then steps
                    else if mod2(n) == 0
                         then collatz(n/2, steps + 1)
                         else collatz(3*n + 1, steps+1)

main() = collatz(27, 0) // should output 111